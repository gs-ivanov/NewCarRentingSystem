@model List<CarListingViewModel>

@{
    ViewData["Title"] = "Welcome";
}

@{ 
    var firstCar = Model.Any() ? Model[0] : null;
    var secondCar = Model.Count > 1 ? Model[1] : null;
    var thirdCar = Model.Count > 2 ? Model[2] : null;
}

@if (!Model.Any())
    {
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars</h1>
        <p class="lead">There are no cars in the system currently available so why dont you just add one</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
        </p>
    </div>
    }

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img src="@firstCar.ImageUrl" class="d-block w-100" alt="@firstCar.Brand @firstCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@firstCar.Year  @firstCar.Brand @firstCar.Model</h5>
                </div>
            </div>
        }
        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img src="@secondCar.ImageUrl" class="d-block w-100" alt="@secondCar.Brand @secondCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@secondCar.Year  @secondCar.Brand @secondCar.Model</h5>
                </div>
            </div>
        }
        @if (thirdCar != null)
        {
            <div class="carousel-item active">
                <img src="@thirdCar.ImageUrl" class="d-block w-100" alt="@thirdCar.Brand @thirdCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@thirdCar.Year  @thirdCar.Brand @thirdCar.Model</h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>