@model AddCarFormModel

@{
    ViewData["Title"] = "Add Car";
}
@*<div class="container"> Може и без него*@
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3  col-xl-6 ">
        <h2 class="heading-marging text-center">Add Car</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="Toyota, BMW, etc..." value="Toyota">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Yaris, 2000, etc..." value="Yaris 1">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="4"  value="Toyota is a very good car!"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here..." value="https://localhost:5001/Cars/Add">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" placeholder="@DateTime.UtcNow.Year" value="2020">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
    @*</div>*@
</div>